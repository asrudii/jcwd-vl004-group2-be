<div class='invoice__main'>
  <span class='invoice__background_approved'>Approved</span>
  <div class='invoice__header'>
    <div class='invoice__wrapper'>
      <span class='invoice__logo'>Heizen Berg Co.</span>
      <span class='invoice__header_id'>Invoice #{{data.id}}</span>
    </div>
  </div>
  <div class='invoice__content'>
    <div class='invoice__info_wrapper'>
      <div class='invoice__info_user'>
        <span class='text__info_title'>Recipient:</span>
        <span class='text__user_name'>{{data.user.name}}</span>
        <span class='text__phone'>{{data.user.phone_number}}</span>
        <div class='invoice__info_user_wrapper'>
          <span class='text__user_property'>Date:</span>
          <span>{{date data.createdAt}}</span>
        </div>
        <div class='invoice__info_user_wrapper'>
          <span class='text__user_property'>Courier:</span>
          <span>{{data.deliveryoption.name}}</span>
        </div>
      </div>
      <div class='invoice__info_address'>
        <span class='text__info_title'>Shipping Address:</span>
        <span class='text__address_medium'>{{data.address.address}}</span>
        <span class='text__address_medium'>{{data.address.city}}</span>
        <span class='text__address_bold'>{{data.address.province}}</span>
        <span class='text__address_bold'>{{data.address.country}}</span>
        <span class='text__address_medium'>{{data.address.postalcode}}</span>
      </div>
    </div>
    <div class='invoice__item_wrapper'>
      <div class='invoice__item_header'>
        <span>Product Info:</span>
      </div>
      <div class='invoice__item_properties'>
        <div class='invoice__item_prop_img'>
          <span>Image:</span>
        </div>
        <div class='invoice__item_prop_name'>
          <span>Name:</span>
        </div>
        <div class='invoice__item_prop_price'>
          <span>Price:</span>
        </div>
        <div class='invoice__item_prop_quantity'>
          <span>Quantity:</span>
        </div>
        <div class='invoice__item_prop_subtotal'>
          <span>Subtotal:</span>
        </div>
      </div>
      <div class='invoice__items_wrapper'>
        {{#each data.invoiceitems}}
          <div class='invoice__item'>
            <div class='invoice__item_image'>
              <div class='invoice__item_img'>
                <img src={{{product.image}}} />
              </div>
            </div>
            <div class='invoice__item_name'>
              <span>{{product.name}}</span>
            </div>
            <div class='invoice__item_price'>
              <span>Rp. {{currency price}}</span>
            </div>
            <div class='invoice__item_quantity'>
              <span>{{currency quantity}} {{product.unit}}</span>
            </div>
            <div class='invoice__item_subtotal'>
              <span>Rp. {{currency subtotal}}</span>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class='invoice__footer'>
    <div class='invoice__footer_wrapper'>
      <div class='invoice__footer_notes'>
        <span class='invoice__footer_notes-header'>Notes:</span>
      </div>
      <div class='invoice__footer_summary'>
        <span class='invoice__footer_summary-header'>Order Summary</span>
        <div class='invoice__footer_summary_field_wrapper'>
          <span class='invoice__footer_summary_field-prop'>Total:</span>
          <span class='invoice__footer_summary_field-value'>Rp. {{currency data.total}}</span>
        </div>
        <div class='invoice__footer_summary_field_wrapper'>
          <span class='invoice__footer_summary_field-prop'>Delivery:</span>
          <span class='invoice__footer_summary_field-value'>Rp. {{currency data.deliveryoption.cost}}</span>
        </div>
        <div class='invoice__footer_summary_field_wrapper_total'>
          <span class='invoice__footer_summary_field-prop'>Gr. Total:</span>
          <span class='invoice__footer_summary_field-value'>Rp. {{grandTotal data.total data.deliveryoption.cost}}</span>
        </div>
      </div>
    </div>
  </div>
  <div class='invoice__footer_bottom'>
    <span>Â© Heizen Berg Co., 2022</span>
  </div>
</div>